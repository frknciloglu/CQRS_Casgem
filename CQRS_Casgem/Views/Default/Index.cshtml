@model List<CQRS_Casgem.CQRSPattern.Results.GetProductQueryResults>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<body>
    <div class="container">

        <br />
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Ürün Adı</th>
                <th>Marka</th>
                <th>Kategori</th>
                <th>Stok</th>
                <th>Fiyat</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>ürün detay</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>
                    <td>@item.Category</td>
                    <td>@item.Stock</td>
                    <td>@item.Price</td>
                    <td><a href="/Default/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Default/UpdateProduct/@item.ProductID" class="btn btn-primary">Güncelle</a></td>
                    <td><a href="/Default/GetProduct/@item.ProductID" class="btn btn-primary">getir</a></td>

                </tr>
            }
        </table>
        <a href="/Product/AddProduct/" class="btn btn-info"> Yeni Ürün Ekle</a>
    </div>
</body>
</html>
